<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Edit Group</h2>
      <%= render 'layouts/errors', obj: @group %>
      <%= form_with model: @group, url: user_group_path, method: :patch, local: true do |f| %>
        <p>グループ名</p>
        <%= f.text_field :name, class: "form-control " %>
        <p>紹介文</p>
        <%= f.text_area :introduction,class: "form-control " %>
        <p>グループ画像</p>
        <%= f.file_field :image_id,accept: 'images/*' %>
        <%= f.submit "Update Group", class:"btn btn-info d-block mt-3" %>
      <% end %>
    </div>
  </div>
</div>