<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">今日の投稿数</th>
      <th scope="col">前日の投稿数</th>
      <th scope="col">前日比</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @record_today.count %></td>
      <td><%= @record_yesterday.count %></td>
      <% if @record_yesterday.count == 0 %>
         <td>前日無</td>
      <% else %>
         <td><%= (@record_day *100).round %>%</td>
      <% end %>

    </tr>
  </tbody>
</table>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">今週の投稿数</th>
      <th scope="col">前週の投稿数</th>
      <th scope="col">前週比</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @record_thisweek.count %></td>
      <td><%= @record_lastweek.count %></td>
      <td>70%</td>
    </tr>
  </tbody>
</table>