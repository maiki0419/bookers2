<h3>7日分の投稿数</h3>
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">6日前</th>
      <th scope="col">5日前</th>
      <th scope="col">4日前</th>
      <th scope="col">3日前</th>
      <th scope="col">2日前</th>
      <th scope="col">1日前</th>
      <th scope="col">今日</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @record_6day.count %></td>
      <td><%= @record_5day.count %></td>
      <td><%= @record_4day.count %></td>
      <td><%= @record_3day.count %></td>
      <td><%= @record_2day.count %></td>
      <td><%= @record_1day.count %></td>
      <td><%= @record_today.count %></td>
    </tr>
 </table>

 <canvas id="myChart"></canvas>

 <!-- ライブラリ読込 -->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" integrity="sha256-R4pqcOYV8lt7snxMQO/HSbVCFRPMdrhAFMH+vr9giYI=" crossorigin="anonymous"></script>
 <script>
 var ctx = document.getElementById('myChart').getContext('2d');
 var chart = new Chart(ctx, {
     type: 'line',

     // データを指定
     data: {
         labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
         datasets: [{
             label: '投稿した本の数',
             borderColor: 'blue',
             fill: false,
             data: [<%= @record_6day.count %>, <%= @record_5day.count %>, <%= @record_4day.count %>, <%= @record_3day.count %>,<%= @record_2day.count %>, <%= @record_1day.count %>, <%= @record_today.count %>]
         }]
     },

     // 設定はoptionsに記述
     options: {
       //タイトル
       title: {
         display: true,
         text: '7日間の投稿数の比較'
       }
     }
});
</script>
